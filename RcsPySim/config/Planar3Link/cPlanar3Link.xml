<Controller graph="gPlanar3Link.xml">

    <Task name="Position X" controlVariable="X" effector="Effector" active="false" />
    <Task name="Position Z" controlVariable="Z" effector="Effector" active="false" />

    <Task name="Distance 1" controlVariable="Distance" effector="Effector" refBdy="Goal1" gainDX="0.1" active="false" />
    <Task name="Distance 2" controlVariable="Distance" effector="Effector" refBdy="Goal2" gainDX="0.1" active="false" />
    <Task name="Distance 3" controlVariable="Distance" effector="Effector" refBdy="Goal3" gainDX="0.1" active="flase" />

    <CollisionModel DistanceThreshold="0.1"> <!-- [cm]; former: 0.025-->
        <CollisionPair body1="Link1" body2="Link3"/>
        <CollisionPair body1="Link2" body2="Base"/>
        <CollisionPair body1="Link3" body2="Base"/>
        <CollisionPair body1="Link3" body2="Goal1" DistanceThreshold="0.04"/>
        <CollisionPair body1="Link3" body2="Goal2" DistanceThreshold="0.04"/>
        <CollisionPair body1="Link3" body2="Goal3" DistanceThreshold="0.04"/>
        <CollisionPair body1="Effector" body2="Link1"/>
        <CollisionPair body1="Effector" body2="Link2"/>
        <CollisionPair body1="Effector" body2="Base"/>
    </CollisionModel>

</Controller>
